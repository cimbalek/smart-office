package org.kie.api.testday.motion
dialect "java"
import org.kie.api.testday.model.Room
import org.kie.api.testday.model.sensors.MotionSensor

rule "populated"
when
    $motionSensor: MotionSensor(motionDetected == true) from entry-point motion
    Room(motionSensor == $motionSensor, $l: light) from entry-point motion
then
    modify($l) {
        setBrightness(100)
    }
end
